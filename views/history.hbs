<div class='content'>
  <script src='../components/history-onload.js' type='text/javascript'></script>
  <section class='history-block'>
    <section class='history-list'>
      <table id='history2'>
        <thead>
        <tr>
          <th>Категория</th>
          <th>Количество</th>
          <th>Счет</th>
          <th>Дата</th>
        </tr>
        </thead>
        <tbody id='main'>
        {{#each viewData.transactions}}
          <tr>
            <td>{{category.name}}</td>
            <td>{{amount}} {{account.currency.symbol}}</td>
            <td>{{account.title}}</td>
            <td>{{date}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </section>

    <div class='graphs'>
      <div class='graph'>
        <h3>Расходы по категориям за месяц</h3>
        <canvas id='myChart' style='width:100%;max-width:700px'></canvas>

        <script>
          const colors = ['#e9f5db', '#cfe1b9', '#b5c99a', '#97a97c', '#588157',
            '#718355', '#31572c'];

          function generateRandomColor(colors, n) {
            const random = [];
            for (let i = 0; i < n; i++) {
              let j = Math.floor(Math.random() * colors.length);
              random[i] = colors[j];
              colors.splice(j, 1);
            }
            return random;
          }

          const xValues = [];
          const yValues = [];

          {{#each viewData.expense_xValues}}
            xValues.push("{{this}}");
          {{/each}}
          {{#each viewData.expense_yValues}}
            yValues.push("{{this}}");
          {{/each}}

          new Chart('myChart', {
            type: 'pie', data: {
              labels: xValues,
              datasets: [{
                backgroundColor: generateRandomColor(colors,
                  {{viewData.expenseLength}}), data: yValues,
              }],
            }, options: {
              legend: {
                position: 'right',
              },
            },
          });
        </script>
      </div>

      <div class='graph'>
        <h3>Доходы по категориям за месяц</h3>
        <canvas id='myChart2' style='width:100%;max-width:700px'></canvas>

        <script>
          const colors2 = ['#f9dc5c', '#fae588', '#fcefb4', '#f9dc5c', '#cca000'];

          const xValues2 = [];
          const yValues2 = [];

          {{#each viewData.income_xValues}}
            xValues2.push("{{this}}");
          {{/each}}
          {{#each viewData.income_yValues}}
            yValues2.push("{{this}}");
          {{/each}}

          new Chart('myChart2', {
            type: 'pie', data: {
              labels: xValues2,
              datasets: [{
                backgroundColor: generateRandomColor(colors2, {{viewData.incomeLength}}),
                data: yValues2,
              }],
            }, options: {
              legend: {
                position: 'right',
              },
            },
          });
        </script>
      </div>
    </div>
  </section>
</div>
